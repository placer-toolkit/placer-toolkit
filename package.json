{
    "name": "placer-toolkit",
    "type": "module",
    "version": "1.0.0-alpha.3",
    "description": "A web component library thatâ€™s designed to be flexible and accessible. Built with Lit.",
    "keywords": [
        "lit",
        "placer",
        "toolkit",
        "litelement",
        "components",
        "placer-toolkit",
        "web-components",
        "custom-elements"
    ],
    "main": "./dist/placer.js",
    "module": "./dist/placer.js",
    "types": "./dist/placer.d.ts",
    "author": "Placer (maintainer: @randomguy-2650)",
    "license": "MIT",
    "customElements": "dist/custom-elements.json",
    "exports": {
        ".": {
            "import": "./dist/placer.js",
            "types": "./dist/placer.d.ts"
        },
        "./cdn/global-shims.js": "./cdn/global-shims.js",
        "./dist/global-shims.js": "./dist/global-shims.js",
        "./cdn/placer.js": "./cdn/placer.js",
        "./dist/placer.js": "./dist/placer.js",
        "./cdn/placer-autoloader.js": "./cdn/placer-autoloader.js",
        "./dist/placer-autoloader.js": "./dist/placer-autoloader.js",
        "./cdn/custom-elements.json": "./cdn/custom-elements.json",
        "./dist/custom-elements.json": "./dist/custom-elements.json",
        "./cdn/components/*": "./cdn/components/*",
        "./dist/components/*": "./dist/components/*",
        "./cdn/styles/*": "./cdn/styles/*",
        "./dist/styles/*": "./dist/styles/*",
        "./cdn/translations/*": "./cdn/translations/*",
        "./dist/translations/*": "./dist/translations/*",
        "./cdn/utilities/*": "./cdn/utilities/*",
        "./dist/utilities/*": "./dist/utilities/*"
    },
    "files": [
        "cdn",
        "dist",
        "LICENSE.md",
        "README.md"
    ],
    "scripts": {
        "build": "node ./scripts/build.js",
        "lint": "tsc --noEmit",
        "format": "prettier --write --log-level=warn .",
        "prepare": "husky",
        "prepublishOnly": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/placer-toolkit/placer-toolkit.git"
    },
    "bugs": {
        "url": "https://github.com/placer-toolkit/placer-toolkit/issues"
    },
    "funding": {
        "type": "individual",
        "url": "https://ko-fi.com/randomguy2650"
    },
    "engines": {
        "node": "^20.0.0 || ^22.0.0 || ^23.0.0 || ^24.0.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,html,css,md,mdx}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@ctrl/tinycolor": "^4.2.0",
        "@floating-ui/dom": "^1.7.4",
        "composed-offset-position": "^0.0.6",
        "lit": "^3.3.1",
        "nanoid": "^5.1.6",
        "qr-creator": "^1.0.0"
    },
    "devDependencies": {
        "@custom-elements-manifest/analyzer": "^0.11.0",
        "comment-parser": "^1.4.1",
        "esbuild": "^0.27.0",
        "fs-extra": "^11.3.2",
        "glob": "^13.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "prettier": "^3.6.2",
        "tslib": "^2.8.1",
        "typescript": "^5.9.3"
    }
}
