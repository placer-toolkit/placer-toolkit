{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["DOM", "ES2020"],
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "strict": true,
        "allowImportingTsExtensions": true,
        "emitDeclarationOnly": true
    },
    "include": ["src"],
    "exclude": [
        "**/node_modules/*",
        "**/dist/*",
        "**/build/*",
        "**/out-tsc/*",
        "**/out-tsc-*/*",
        "**/tsconfig*"
    ]
}
