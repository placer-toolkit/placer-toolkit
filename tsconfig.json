{
    "compilerOptions": {
        // Output
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "outDir": "dist",
        "rootDir": "src",

        // Declarations
        "declaration": true,
        "declarationDir": "dist",
        "emitDeclarationOnly": false,

        // Decorators
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,

        // Helpers
        "importHelpers": true,
        "noEmitHelpers": true,
        "isolatedModules": true,

        // Type checking
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,

        // Source maps
        "sourceMap": false
    },
    "include": ["src"],
    "exclude": [
        "**/node_modules/*",
        "**/cdn/*",
        "**/dist/*",
        "**/build/*",
        "**/out-tsc/*",
        "**/out-tsc-*/*",
        "**/tsconfig*"
    ]
}
