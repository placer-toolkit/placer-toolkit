---
import { getLanguageFromURL, useTranslations } from "../i18n/utilities.js";

export interface Props {
    componentName: string;
}

interface CEMDeclaration {
    name: string;
    tagName?: string;
    since?: string;
    status?: string;
}

interface CEMModule {
    declarations?: CEMDeclaration[];
}

interface CEMManifest {
    package?: {
        version?: string;
    };
    modules?: CEMModule[];
}

const { componentName } = Astro.props;

const loadManifest = async (): Promise<
    (CEMManifest & { package?: { version?: string } }) | null
> => {
    try {
        const manifestModule = await import(
            "placer-toolkit/dist/custom-elements.json",
            {
                assert: { type: "json" },
            }
        );
        const manifest = manifestModule.default ?? manifestModule;

        return manifest as CEMManifest & { package?: { version?: string } };
    } catch (error) {
        console.error(`Couldnâ€™t load the CEM file: ${error}`);

        return null;
    }
};

const findComponentData = (
    manifest: CEMManifest,
    componentName: string,
): CEMDeclaration | null => {
    if (!manifest.modules) {
        return null;
    }

    for (const module of manifest.modules) {
        const declaration = module.declarations?.find(
            (decl) =>
                decl.name === componentName || decl.tagName === componentName,
        );
        if (declaration) {
            return declaration;
        }
    }
    return null;
};

const manifest = await loadManifest();
const componentData = manifest
    ? findComponentData(manifest, componentName)
    : null;

const language = getLanguageFromURL(Astro.url);
const translation = useTranslations(language);

const tagName = `<${componentData?.tagName}>`;
const sinceVersion = translation("ui.content.component.since", {
    since: componentData?.since ?? translation("ui.component.since.fallback"),
});

let status;
let appearance: "primary" | "warning" | "danger" | null = null;

if (componentData?.status === "stable") {
    status = translation("ui.content.component.stable");
    appearance = "primary";
} else if (componentData?.status === "experimental") {
    status = translation("ui.content.component.experimental");
    appearance = "warning";
} else {
    status = translation("ui.content.component.since.fallback");
    appearance = "danger";
}
---

<div class="component-info pc-cluster pc-align-items-center pc-gap-s">
    <code class="tag-name">{tagName}</code>
    <pc-badge appearance="neutral" set:html={sinceVersion} />
    {
        appearance && (
            <pc-badge class="status" appearance={appearance}>
                {status}
            </pc-badge>
        )
    }
</div>

<style>
    .component-info {
        margin-block-end: var(--pc-content-spacing);
    }

    code.tag-name {
        padding-block: 0;
    }

    pc-badge.status {
        text-transform: capitalize;
    }
</style>
