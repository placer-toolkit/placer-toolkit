<kbd class="keyboard-key auto-identify-meta-key"></kbd>

<script>
    document
        .querySelectorAll(".keyboard-key.auto-identify-meta-key")
        .forEach((keyboardKey) => {
            const isAppleDevice =
                // @ts-expect-error — TypeScript is unaware of navigator.userAgentData
                navigator.userAgentData?.platform
                    ?.toLowerCase()
                    .includes("mac") ||
                // Deprecated: We use this deprecated function for browsers that don’t support navigator.userAgentData
                /mac|iphone|ipad|ipod/i.test(navigator.platform);

            keyboardKey.textContent = isAppleDevice ? "⌘" : "Ctrl";
        });
</script>
