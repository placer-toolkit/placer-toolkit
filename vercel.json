{
    "redirects": [
        {
            "source": "/components/visually-hidden",
            "destination": "/style-utilities/visually-hidden",
            "permanent": true
        },
        {
            "source": "/docs/design-tokens/border-radius",
            "destination": "/docs/design-tokens/borders/#border-radius",
            "permanent": true
        },
        {
            "source": "/docs/design-tokens/z-index",
            "destination": "/docs/design-tokens",
            "permanent": true
        },
        {
            "source": "/docs/design-tokens/other-tokens",
            "destination": "/docs/design-tokens/component-groups",
            "permanent": true
        },

        {
            "source": "/de/:path((?!docs|404|cdn|dist|assets|favicon).*)",
            "destination": "/de/docs/:path",
            "permanent": true
        },
        {
            "source": "/:path((?!docs|de|404|cdn|dist|assets|favicon|.*\\..*).*)",
            "destination": "/docs/:path",
            "permanent": true
        }
    ],
    "rewrites": [
        {
            "source": "/de/:path*",
            "destination": "/de/404",
            "missing": [{ "type": "header", "key": "x-matched-path" }]
        }
    ]
}
